# ssmd-data-ts: TypeScript data server for market data
FROM denoland/deno:2.6.5

WORKDIR /app

# Copy only necessary files for the server
COPY deno.json ./
COPY src/server/ ./src/server/
COPY src/lib/ ./src/lib/

# Cache dependencies
RUN deno cache src/server/main.ts

# Create non-root user for security (deno image already has 'deno' user)
USER deno

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8080/health || exit 1

# Run the server
CMD ["deno", "run", "--allow-net", "--allow-env", "--allow-read", "src/server/main.ts"]
